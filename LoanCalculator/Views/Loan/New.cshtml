@using System.Web.Optimization
@model LoanCalculator.ViewModels.LoanFormViewModel
@{
    ViewBag.Title = "New Loan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Loan</h2>

@using (Html.BeginForm("Validate","Loan"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Loan.LoanType.Id)
        @Html.DropDownListFor(m => m.Loan.LoanType.Id, new SelectList(Model.LoanType, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Loan.LoanType.Id)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Loan.Amount)
        @Html.TextBoxFor(m => m.Loan.Amount, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Loan.Amount)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Loan.PaybackTimeInYears)
        @Html.TextBoxFor(m => m.Loan.PaybackTimeInYears, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Loan.PaybackTimeInYears)
    </div>
    @Html.HiddenFor(m => m.Loan.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Calculate</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

